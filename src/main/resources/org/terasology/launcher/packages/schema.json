{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties" : {

      "url": {"type": "string", "format": "uri"},

      "type": {"type": "string", "minLength": 1},

      "trackedPackages": {
        "type": "array",
        "items": {
          "oneOf": [
            {"$ref": "subschema/TrackedPackage.json#/v1"},
            {"$ref": "subschema/TrackedPackage.json#/v2"}
          ]
        }
      }
    },
    "required": ["url", "type", "trackedPackages"]
  },
  "minItems": 1
}
